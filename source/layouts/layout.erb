      ga('create', 'UA-60130396-1', 'auto');
      ga('send', 'pageview');
    </script>
  </head>
  <body class="<%= page_classes %>">
    <div class="accent-bar"></div>
    <header class="site-header">
      <div class="container">
        <div class="row header-row">
          <div class="col-md-4">
            <div class="logo">
              <a href="/">
                <%= image_tag 'logo.png', class: 'logo', alt: 'Erie Day of Code' %>
              </a>
            </div>
          </div>

          <div class="col-md-8">
            <nav class="social-nav">
              <ul class="nav">
                <li class="nav-item">
                  <a class="nav-link" href="<%= social_links.twitter %>" target="_blank">
                    <i class="fa fa-twitter"></i>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%= social_links.facebook %>" target="_blank">
                    <i class="fa fa-facebook"></i>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%= social_links.youtube %>" target="_blank">
                    <i class="fa fa-youtube"></i>
                  </a>
                </li>
              </ul>
            </nav>

            <nav class="primary-nav">
              <ul class="nav">
                <!--
                  <li class="nav-item">
                  <a class="nav-link" href="#agenda">Agenda</a>
                  </li>
                -->
                <li class="nav-item">
                  <a class="nav-link" href="#speakers">Speakers</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#venue">Venue</a>
                </li>
                <!--
                  <li class="nav-item">
                  <a class="nav-link" href="#lodging">Lodging</a>
                  </li>
                -->
                <li class="nav-item">
                  <a class="nav-link" href="#sponsors">Sponsors</a>
                </li>

                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Archive</a>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="<%= data.info.youtube_url %>" target="_blank">All Videos (YouTube)</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="http://2017.eriedayofcode.com">2017</a>
                    <a class="dropdown-item" href="http://2016.eriedayofcode.com">2016</a>
                    <a class="dropdown-item" href="http://2015.eriedayofcode.com">2015</a>
                  </div>
                </li>
              </ul>
          </div>
        </div>
            </nav>
      </div>

      <div class="hero">
        <div class="container">
          <div class="row">
            <div class="col-lg-6">
              <h4 class="intro">Our <span class="count">4th</span> annual event starts</h4>
              <h1 class="date" title="May 4, 2018">05/04/2018</h1>
              <h3 class="venue">9:00am at the <a href="#venue">Erie Art Museum</a></h3>
            </div>

            <div class="col-lg-4 offset-lg-2">
              <section class="tickets">
                <h2>Thanks for another great year!</h2>
              </section>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main>
    <%= yield %>
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <p>
            If you have questions or need more information,
            send an email to
            <%= mail_to 'contact@eriedayofcode.com' %>
            </p>

            <p>
            Please review our
            <%= link_to 'Code of Conduct', '/code-of-conduct.html' %>
            </p>
          </div>
        </div>

        <section class="organizers">
          <div class="row">
            <div class="col-lg-12">
              <h1 class="organizers--title">
                Erie Day of Code is organized by members of the
                <%= link_to 'Coderie Software Development Group', 'http://meetup.com/coderie' %>
                and
                <%= link_to 'Radius CoWork', 'http://radiusco.work' %>
              </h1>
              <ul class="organizers--nav nav">
                <% data.organizers.each do |org| %>
                  <li class="nav-item organizer">
                    <a href="https://twitter.com/<%= org.twitter %>" target="_blank">
                      <%= image_tag org.image, class: 'organizer--image', alt: org.name, title: org.name %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </section>
      </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>

    <%= javascript_include_tag "site" %>

  </body>
</html>
